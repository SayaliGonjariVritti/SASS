<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        card_view:cardUseCompatPadding="true"
        android:elevation="3dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rel_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/text_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/date_circle_text"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="15 Mar"
                    android:gravity="center"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/rel_open"
                >
            <TextView
                android:id="@+id/txt_permit_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:maxLines="3"
                android:text="Permit No:"
                android:textStyle="bold"

                />
                <TextView
                    android:id="@+id/txt_permit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:maxLines="3"
                    android:text="PERMIT/01"
                    android:layout_toRightOf="@+id/txt_permit_no"

                    />
                <TextView
                    android:id="@+id/txt_operation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:maxLines="3"
                    android:text="Operation :"
                    android:textStyle="bold"
                    android:layout_below="@+id/txt_permit_no"
                    android:layout_marginTop="2dp"

                    />
                <TextView
                    android:id="@+id/txt_nature_operation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:maxLines="3"
                    android:text="Permit filling"
                    android:layout_toRightOf="@+id/txt_operation"
                    android:layout_below="@+id/txt_permit_no"
                    android:layout_marginTop="2dp"


                    />
                <TextView
                    android:id="@+id/txt_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:maxLines="3"
                    android:text="Location :"
                    android:textStyle="bold"
                    android:layout_below="@+id/txt_operation"
                    android:layout_marginTop="2dp"

                    />
                <TextView
                    android:id="@+id/txt_location_operation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:maxLines="3"
                    android:text="Pune"
                    android:layout_toRightOf="@+id/txt_location"
                    android:layout_below="@+id/txt_operation"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="5dp"


                    />
            </RelativeLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>




</RelativeLayout>
