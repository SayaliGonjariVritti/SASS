<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/edit_text"
        android:gravity="center|left"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ln_spinner_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text"
            android:orientation="horizontal"
            android:padding="2dp"
            >

            <Spinner
                android:id="@+id/spinner_permit_closed1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:spinnerMode="dialog"
                android:visibility="visible"/>

        </LinearLayout>


        <EditText
            android:id="@+id/edt_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:cursorVisible="true"
            android:gravity="center|left"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/dark_grey"
            android:hint="Enter reason"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"

            android:textSize="16dp" />


        <EditText
            android:id="@+id/edt_password_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:cursorVisible="true"
            android:gravity="center|left"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/dark_grey"
            android:hint="Enter password"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="50dp"            >
            <Button
                android:id="@+id/txt_submit_reason"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:layout_weight=".5"
                android:background="@drawable/backshape_selected_blue"
                android:text="SUBMIT"
                android:layout_margin="2dp"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <Button
                android:id="@+id/txt_cancel_reason"
                android:layout_width="150dp"
                android:layout_margin="2dp"

                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:layout_weight=".5"
                android:background="@drawable/backshape_selected_orange"
                android:text="CANCEL"
                android:textColor="@color/white"
                android:textSize="18dp" />


        </LinearLayout>

        </LinearLayout>
    </LinearLayout>